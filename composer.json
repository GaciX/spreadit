{
	"name": "spreadit/spreadit",
	"description": "Link sharing and bullshit generator",
	"keywords": ["yes", "spreadit"],
	"license": "Spreadit non-free public license",
    "repositories": [
        {
            "type":"package",
            "package": {
                "name": "spreadit/php-markdown",
                "version": "dev-master",
                "source": {
                    "url": "git://github.com/spreadit/php-markdown.git",
                    "type": "git",
                    "reference": "lib"
                },
                "autoload": {
                    "psr-0": { "Michelf": "" }
                }
            }
        }
    ],
	"require": {
		"laravel/framework": "4.2.*",
		"loic-sharma/profiler": "1.1.*",
		"lstrojny/functional-php": "dev-master",
        "mews/captcha": "dev-master",
        "sunra/php-simple-html-dom-parser": "dev-master",
        "roumen/feed": "dev-master",
        "knplabs/knp-snappy": "*",
        "intervention/image": "2.*",
        "laravelbook/ardent": "dev-master",
        "fitztrev/laravel-html-minify": "1.*",
        "tappleby/laravel-auth-token": "0.3.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
            "app/models/libs",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
